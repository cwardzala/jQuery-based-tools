		<script src="dojo.js.uncompressed.js" type="text/javascript"></script>
		<script src="tabs.dojo.js" type="text/javascript"></script>
		<script type="text/javascript">
			//call the plugin on the wrapper div to bind the funcitons.
			dojo.query('.tabs').atabs(
				{
					mode:"tabs",
					defaultTab: 2
				}
			);
			dojo.query('.accordion').atabs(
				{
					mode:"accordion",
					defaultTab: 0
				}
			);
		</script>
	</body>
</html>